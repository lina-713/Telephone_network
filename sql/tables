CREATE TABLE IF NOT EXISTS public.services
(
    id integer NOT NULL GENERATED ALWAYS AS IDENTITY ( INCREMENT 1 START 1 MINVALUE 1 MAXVALUE 2147483647 CACHE 1 ),
    name_service text COLLATE pg_catalog."default" NOT NULL,
    price integer NOT NULL,
    explain text COLLATE pg_catalog."default",
    CONSTRAINT services_pkey PRIMARY KEY (id)
)

CREATE TABLE IF NOT EXISTS public.individual_account
(
    id integer NOT NULL GENERATED ALWAYS AS IDENTITY ( INCREMENT 1 START 1 MINVALUE 1 MAXVALUE 2147483647 CACHE 1 ),
    id_sub integer NOT NULL,
    serv integer NOT NULL,
    CONSTRAINT individual_account_pkey PRIMARY KEY (id),
    CONSTRAINT individual_account_id_sub_fkey FOREIGN KEY (id_sub)
        REFERENCES public.subscribers (id) MATCH SIMPLE
        ON UPDATE NO ACTION
        ON DELETE NO ACTION
        NOT VALID,
    CONSTRAINT individual_account_serv_fkey FOREIGN KEY (serv)
        REFERENCES public.services (id) MATCH SIMPLE
        ON UPDATE NO ACTION
        ON DELETE NO ACTION
        NOT VALID
)

CREATE TABLE IF NOT EXISTS public.status
(
    id integer NOT NULL GENERATED ALWAYS AS IDENTITY ( INCREMENT 1 START 1 MINVALUE 1 MAXVALUE 2147483647 CACHE 1 ),
    name text COLLATE pg_catalog."default" NOT NULL,
    CONSTRAINT status_pkey PRIMARY KEY (id)
)

CREATE TABLE IF NOT EXISTS public.subscribers
(
    id integer NOT NULL GENERATED BY DEFAULT AS IDENTITY ( INCREMENT 1 START 1 MINVALUE 1 MAXVALUE 2147483647 CACHE 1 ),
    surname text COLLATE pg_catalog."default" NOT NULL,
    name text COLLATE pg_catalog."default" NOT NULL,
    contact_number numeric NOT NULL,
    account_number numeric NOT NULL,
    status integer NOT NULL,
    balance integer NOT NULL,
    CONSTRAINT subscribers_pkey PRIMARY KEY (id),
    CONSTRAINT subscribers_status_fkey FOREIGN KEY (status)
        REFERENCES public.status (id) MATCH SIMPLE
        ON UPDATE NO ACTION
        ON DELETE NO ACTION
        NOT VALID
)
